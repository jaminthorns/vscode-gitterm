{
  "name": "gitterm",
  "displayName": "GitTerm",
  "description": "Rich integration between Git CLI and VS Code",
  "publisher": "jaminthorns",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaminthorns/vscode-gitterm.git"
  },
  "author": {
    "name": "Jamin Thornsberry"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitterm.folderHistory",
        "title": "GitTerm: Folder History"
      },
      {
        "command": "gitterm.fileHistory",
        "title": "GitTerm: File History"
      },
      {
        "command": "gitterm.fileBlame",
        "title": "GitTerm: File Blame"
      },
      {
        "command": "gitterm.lineHistory",
        "title": "GitTerm: Line History"
      },
      {
        "command": "gitterm.lineBlame",
        "title": "GitTerm: Line Blame"
      },
      {
        "command": "gitterm.activeFileHistory",
        "title": "GitTerm: File History"
      },
      {
        "command": "gitterm.activeFileBlame",
        "title": "GitTerm: File Blame"
      },
      {
        "command": "gitterm.selectionHistory",
        "title": "GitTerm: Selection History"
      },
      {
        "command": "gitterm.selectionBlame",
        "title": "GitTerm: Selection Blame"
      },
      {
        "command": "gitterm.selectionSearch",
        "title": "GitTerm: Selection Search (Pickaxe)"
      },
      {
        "command": "gitterm.debugStores",
        "title": "GitTerm: Debug Stores"
      },
      {
        "command": "gitterm.showCommitActions",
        "title": "GitTerm: Show Commit Actions",
        "icon": "$(git-commit)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "gitterm.folderHistory",
          "when": "false"
        },
        {
          "command": "gitterm.fileHistory",
          "when": "false"
        },
        {
          "command": "gitterm.fileBlame",
          "when": "false"
        },
        {
          "command": "gitterm.lineHistory",
          "when": "false"
        },
        {
          "command": "gitterm.lineBlame",
          "when": "false"
        },
        {
          "command": "gitterm.showCommitActions",
          "when": "false"
        },
        {
          "command": "gitterm.activeFileHistory",
          "when": "resourceScheme =~ /^file$|^git$|^git-commit|^scm-history-item$/"
        },
        {
          "command": "gitterm.activeFileBlame",
          "when": "resourceScheme =~ /^file$|^git$|^git-commit|^scm-history-item$/"
        },
        {
          "command": "gitterm.selectionHistory",
          "when": "resourceScheme =~ /^file$|^git$|^git-commit|^scm-history-item$/"
        },
        {
          "command": "gitterm.selectionBlame",
          "when": "resourceScheme =~ /^file$|^git$|^git-commit|^scm-history-item$/"
        },
        {
          "command": "gitterm.selectionSearch",
          "when": "resourceScheme =~ /^file$|^git$|^git-commit|^scm-history-item$/ && editorHasSelection"
        }
      ],
      "explorer/context": [
        {
          "command": "gitterm.folderHistory",
          "group": "40_gitterm_folder@0",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "gitterm.fileHistory",
          "group": "40_gitterm_file@0",
          "when": "!explorerResourceIsFolder"
        },
        {
          "command": "gitterm.fileBlame",
          "group": "40_gitterm_file@1",
          "when": "!explorerResourceIsFolder"
        }
      ],
      "editor/title": [
        {
          "command": "gitterm.showCommitActions",
          "group": "navigation",
          "when": "resourceScheme =~ /^git$|^git-commit|^scm-history-item$/"
        }
      ],
      "editor/title/context": [
        {
          "command": "gitterm.fileHistory",
          "group": "10_gitterm_file@0",
          "when": "resourceScheme =~ /^file$|^git$/"
        },
        {
          "command": "gitterm.fileBlame",
          "group": "10_gitterm_file@1",
          "when": "resourceScheme =~ /^file$|^git$/"
        }
      ],
      "editor/context": [
        {
          "command": "gitterm.selectionHistory",
          "group": "10_gitterm_selection@0",
          "when": "resourceScheme =~ /^file$|^git$|^git-commit|^scm-history-item$/"
        },
        {
          "command": "gitterm.selectionBlame",
          "group": "10_gitterm_selection@1",
          "when": "resourceScheme =~ /^file$|^git$|^git-commit|^scm-history-item$/"
        },
        {
          "command": "gitterm.selectionSearch",
          "group": "10_gitterm_selection@2",
          "when": "resourceScheme =~ /^file$|^git$|^git-commit|^scm-history-item$/ && editorHasSelection"
        },
        {
          "command": "gitterm.activeFileHistory",
          "group": "11_gitterm_file@0",
          "when": "resourceScheme =~ /^file$|^git$|^git-commit|^scm-history-item$/"
        },
        {
          "command": "gitterm.activeFileBlame",
          "group": "11_gitterm_file@1",
          "when": "resourceScheme =~ /^file$|^git$|^git-commit|^scm-history-item$/"
        }
      ],
      "editor/lineNumber/context": [
        {
          "command": "gitterm.lineHistory",
          "group": "00_gitterm_line@0",
          "when": "resourceScheme =~ /^file$|^git$|^git-commit|^scm-history-item$/"
        },
        {
          "command": "gitterm.lineBlame",
          "group": "00_gitterm_line@1",
          "when": "resourceScheme =~ /^file$|^git$|^git-commit|^scm-history-item$/"
        }
      ]
    },
    "keybindings": [
      {
        "command": "gitterm.activeFileHistory",
        "key": "alt+shift+h",
        "when": "editorFocus && resourceScheme =~ /^file$|^git$|^git-commit|^scm-history-item$/"
      },
      {
        "command": "gitterm.activeFileBlame",
        "key": "alt+shift+b",
        "when": "editorFocus && resourceScheme =~ /^file$|^git$|^git-commit|^scm-history-item$/"
      },
      {
        "command": "gitterm.selectionHistory",
        "key": "alt+h",
        "when": "editorTextFocus && resourceScheme =~ /^file$|^git$|^git-commit|^scm-history-item$/"
      },
      {
        "command": "gitterm.selectionBlame",
        "key": "alt+b",
        "when": "editorTextFocus && resourceScheme =~ /^file$|^git$|^git-commit|^scm-history-item$/"
      },
      {
        "command": "gitterm.selectionSearch",
        "key": "alt+s",
        "when": "editorTextFocus && resourceScheme =~ /^file$|^git$|^git-commit|^scm-history-item$/ && editorHasSelection"
      }
    ],
    "configuration": {
      "title": "GitTerm",
      "properties": {
        "gitterm.terminalLinks.provideCommitLinks": {
          "type": "string",
          "enum": [
            "always",
            "never"
          ],
          "enumItemLabels": [
            "Always",
            "Never"
          ],
          "enumDescriptions": [
            "Always provide commit links.",
            "Never provide commit links."
          ],
          "default": "always",
          "description": "Whether to provide commit links in the terminal."
        },
        "gitterm.terminalLinks.provideReferenceLinks": {
          "type": "string",
          "enum": [
            "always",
            "never"
          ],
          "enumItemLabels": [
            "Always",
            "Never"
          ],
          "enumDescriptions": [
            "Always provide reference links.",
            "Never provide reference links."
          ],
          "default": "always",
          "description": "Whether to provide reference links in the terminal."
        },
        "gitterm.terminalLinks.provideFileLinks": {
          "type": "string",
          "enum": [
            "always",
            "never",
            "withRevisionContext"
          ],
          "enumItemLabels": [
            "Always",
            "Never",
            "Only when terminal has revision context"
          ],
          "enumDescriptions": [
            "Always provide file links.",
            "Never provide file links.",
            "Only provide file links when terminal has revision context."
          ],
          "default": "always",
          "description": "Whether to provide file links in the terminal by default."
        },
        "gitterm.showDefault.revision": {
          "type": "string",
          "enum": [
            "editor",
            "terminal"
          ],
          "enumDescriptions": [
            "Editor",
            "Terminal"
          ],
          "default": "editor",
          "description": "How to show a revision by default."
        },
        "gitterm.showDefault.fileDiffAtRevision": {
          "type": "string",
          "enum": [
            "editor",
            "terminal"
          ],
          "enumDescriptions": [
            "Editor",
            "Terminal"
          ],
          "default": "editor",
          "description": "How to show a diff for a file at a revision by default."
        },
        "gitterm.showDefault.fileAtRevision": {
          "type": "string",
          "enum": [
            "editor",
            "terminal"
          ],
          "enumDescriptions": [
            "Editor",
            "Terminal"
          ],
          "default": "editor",
          "description": "How to show a file at a revision."
        },
        "gitterm.blame.sameFileMoveCopyDetection": {
          "enum": [
            "off",
            "on"
          ],
          "enumDescriptions": [
            "Do not detect moved/copied lines.",
            "Detect moved/copied lines."
          ],
          "default": "on",
          "description": "In blame commands, detect moved/copied lines within a file."
        },
        "gitterm.blame.otherFilesMoveCopyDetection": {
          "enum": [
            "off",
            "sameCommit",
            "sameAndFileCreationCommit",
            "anyCommit"
          ],
          "enumDescriptions": [
            "Do not detect moved/copied lines.",
            "Detect moved/copied lines in the same commit that the line was modified.",
            "Detect moved/copied lines in the same commit that the line was modified and the commit that creates the file.",
            "Detect moved/copied lines in any commit."
          ],
          "default": "sameCommit",
          "description": "In blame commands, detect moved/copied lines from other files."
        },
        "gitterm.gitCommands.folderHistory": {
          "type": "string",
          "default": "git log --stat ${revision} -- '${folder}'",
          "description": "Git command for showing folder history."
        },
        "gitterm.gitCommands.fileHistory": {
          "type": "string",
          "default": "git log --follow --patch ${reverseFlags} ${revision} -- '${filename}'",
          "description": "Git command for showing file history."
        },
        "gitterm.gitCommands.fileBlame": {
          "type": "string",
          "default": "git blame ${moveCopyDetectionFlags} ${revision} -- '${filename}'",
          "description": "Git command for showing file blame."
        },
        "gitterm.gitCommands.lineHistory": {
          "type": "string",
          "default": "git log ${revision} ${fileLineRanges}",
          "description": "Git command for showing history for ranges of lines in a file."
        },
        "gitterm.gitCommands.lineBlame": {
          "type": "string",
          "default": "git blame ${moveCopyDetectionFlags} ${revision} ${lineRanges} -- '${filename}'",
          "description": "Git command for showing blame for ranges of lines in a file."
        },
        "gitterm.gitCommands.revisionHistory": {
          "type": "string",
          "default": "git log ${reverseFlags} ${revision}",
          "description": "Git command for showing history from a revision."
        },
        "gitterm.gitCommands.showRevision": {
          "type": "string",
          "default": "git show -m ${revision}",
          "description": "Git command for showing a revision.\n\nIn terminals created with this command, the `GITTERM_REVISION` environment variable will be set."
        },
        "gitterm.gitCommands.showFileDiffAtRevision": {
          "type": "string",
          "default": "git show -m ${revision} -- '${filename}'",
          "description": "Git command for showing a diff for a file at a revision."
        },
        "gitterm.gitCommands.showFileAtRevision": {
          "type": "string",
          "default": "git show ${revision}:'${filename}'",
          "description": "Git command for showing a file at a revision."
        },
        "gitterm.gitCommands.stringSearch": {
          "type": "string",
          "default": "git log --patch ${revision} ${searches}",
          "markdownDescription": "Git command for searching for a string across commits.\n\nIn terminals created with this command, the `GITTERM_SEARCH` environment variable will be set under the following conditions:\n\n- There is only 1 search string.\n\n- The search string contains no newlines."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "fix": "eslint src --ext ts --fix",
    "test": "vscode-test",
    "build": "vsce package"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "lookpath": "^1.2.2"
  }
}
