{
  "name": "gitterm",
  "displayName": "GitTerm",
  "description": "Rich integration between Git CLI and VS Code",
  "publisher": "jaminthorns",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaminthorns/vscode-gitterm.git"
  },
  "author": {
    "name": "Jamin Thornsberry"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitterm.folderHistory",
        "title": "GitTerm: Folder History"
      },
      {
        "command": "gitterm.fileHistory",
        "title": "GitTerm: File History"
      },
      {
        "command": "gitterm.fileBlame",
        "title": "GitTerm: File Blame"
      },
      {
        "command": "gitterm.lineHistory",
        "title": "GitTerm: Line History"
      },
      {
        "command": "gitterm.lineBlame",
        "title": "GitTerm: Line Blame"
      },
      {
        "command": "gitterm.activeFileHistory",
        "title": "GitTerm: Active File History"
      },
      {
        "command": "gitterm.activeFileBlame",
        "title": "GitTerm: Active File Blame"
      },
      {
        "command": "gitterm.selectionHistory",
        "title": "GitTerm: Selection History"
      },
      {
        "command": "gitterm.selectionBlame",
        "title": "GitTerm: Selection Blame"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "gitterm.folderHistory",
          "when": "false"
        },
        {
          "command": "gitterm.fileHistory",
          "when": "false"
        },
        {
          "command": "gitterm.fileBlame",
          "when": "false"
        },
        {
          "command": "gitterm.lineHistory",
          "when": "false"
        },
        {
          "command": "gitterm.lineBlame",
          "when": "false"
        },
        {
          "command": "gitterm.activeFileHistory",
          "when": "resourceScheme == file"
        },
        {
          "command": "gitterm.activeFileBlame",
          "when": "resourceScheme == file"
        },
        {
          "command": "gitterm.selectionHistory",
          "when": "resourceScheme == file"
        },
        {
          "command": "gitterm.selectionBlame",
          "when": "resourceScheme == file"
        }
      ],
      "explorer/context": [
        {
          "command": "gitterm.folderHistory",
          "group": "40_gitterm_folder@0",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "gitterm.fileHistory",
          "group": "40_gitterm_file@0",
          "when": "!explorerResourceIsFolder"
        },
        {
          "command": "gitterm.fileBlame",
          "group": "40_gitterm_file@1",
          "when": "!explorerResourceIsFolder"
        }
      ],
      "editor/title/context": [
        {
          "command": "gitterm.fileHistory",
          "group": "10_gitterm_file@0",
          "when": "resourceScheme == file"
        },
        {
          "command": "gitterm.fileBlame",
          "group": "10_gitterm_file@1",
          "when": "resourceScheme == file"
        }
      ],
      "editor/context": [
        {
          "command": "gitterm.selectionHistory",
          "group": "10_gitterm_selection@0",
          "when": "resourceScheme == file"
        },
        {
          "command": "gitterm.selectionBlame",
          "group": "10_gitterm_selection@1",
          "when": "resourceScheme == file"
        },
        {
          "command": "gitterm.activeFileHistory",
          "group": "11_gitterm_file@0",
          "when": "resourceScheme == file"
        },
        {
          "command": "gitterm.activeFileBlame",
          "group": "11_gitterm_file@1",
          "when": "resourceScheme == file"
        }
      ],
      "editor/lineNumber/context": [
        {
          "command": "gitterm.lineHistory",
          "group": "00_gitterm_line@0",
          "when": "resourceScheme == file"
        },
        {
          "command": "gitterm.lineBlame",
          "group": "00_gitterm_line@1",
          "when": "resourceScheme == file"
        }
      ]
    },
    "keybindings": [
      {
        "command": "gitterm.activeFileHistory",
        "key": "alt+shift+h",
        "when": "editorFocus"
      },
      {
        "command": "gitterm.activeFileBlame",
        "key": "alt+shift+b",
        "when": "editorFocus"
      },
      {
        "command": "gitterm.selectionHistory",
        "key": "alt+h",
        "when": "editorTextFocus"
      },
      {
        "command": "gitterm.selectionBlame",
        "key": "alt+b",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "GitTerm",
      "properties": {
        "gitterm.terminalLinks.provideCommitLinks": {
          "type": "string",
          "enum": [
            "always",
            "never"
          ],
          "enumItemLabels": [
            "Always",
            "Never"
          ],
          "enumDescriptions": [
            "Always provide commit links",
            "Never provide commit links"
          ],
          "default": "always",
          "description": "Whether to provide commit links in the terminal"
        },
        "gitterm.terminalLinks.provideFileLinks": {
          "type": "string",
          "enum": [
            "always",
            "never",
            "withCommitContext"
          ],
          "enumItemLabels": [
            "Always",
            "Never",
            "Only when terminal has commit context"
          ],
          "enumDescriptions": [
            "Always provide file links",
            "Never provide file links",
            "Only provide file links when terminal has commit context"
          ],
          "default": "always",
          "description": "Whether to provide file links in the terminal"
        },
        "gitterm.gitCommands.folderHistory": {
          "type": "string",
          "default": "git log --stat ${commit} -- '${folder}'",
          "description": "Git command for showing folder history"
        },
        "gitterm.gitCommands.fileHistory": {
          "type": "string",
          "default": "git log --follow --patch ${commit} -- '${filename}'",
          "description": "Git command for showing file history"
        },
        "gitterm.gitCommands.fileBlame": {
          "type": "string",
          "default": "git blame -- '${filename}'",
          "description": "Git command for showing file blame"
        },
        "gitterm.gitCommands.lineHistory": {
          "type": "string",
          "default": "git log ${commit} -L ${startLine},${endLine}:'${filename}'",
          "description": "Git command for showing history for ranges of lines in a file"
        },
        "gitterm.gitCommands.lineBlame": {
          "type": "string",
          "default": "git blame -L ${startLine},${endLine} -- '${filename}'",
          "description": "Git command for showing blame for ranges of lines in a file"
        },
        "gitterm.gitCommands.commitHistory": {
          "type": "string",
          "default": "git log ${commit}",
          "description": "Git command for showing history from a commit"
        },
        "gitterm.gitCommands.showCommit": {
          "type": "string",
          "default": "git show -m ${commit}",
          "description": "Git command for showing a commit"
        },
        "gitterm.gitCommands.showFileDiffAtCommit": {
          "type": "string",
          "default": "git show -m ${commit} -- '${filename}'",
          "description": "Git command for showing a file's diff at a commit"
        },
        "gitterm.gitCommands.showFileContentsAtCommit": {
          "type": "string",
          "default": "git show ${commit}:'${filename}'",
          "description": "Git command for showing a file's contents at a commit"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "fix": "eslint src --ext ts --fix",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "prettier": "^3.0.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "lookpath": "^1.2.2"
  }
}
