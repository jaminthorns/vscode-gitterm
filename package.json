{
  "name": "git-terminal-integration",
  "displayName": "Git Terminal Integration",
  "description": "Integrations for using Git in the terminal",
  "publisher": "jamin.thorns",
  "author": {
    "name": "Jamin Thornsberry"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-terminal-integration.fileHistory",
        "title": "Git Terminal Integration: File History"
      },
      {
        "command": "git-terminal-integration.lineHistory",
        "title": "Git Terminal Integration: Line History"
      }
    ],
    "keybindings": [
      {
        "command": "git-terminal-integration.fileHistory",
        "key": "alt+h",
        "when": "editorFocus"
      },
      {
        "command": "git-terminal-integration.lineHistory",
        "key": "alt+l",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Git Terminal Integration",
      "properties": {
        "git-terminal-integration.gitCommands.fileHistory": {
          "type": "string",
          "default": "git log --oneline --graph --date-order -- ${path}",
          "description": "Git command to use for file history command"
        },
        "git-terminal-integration.gitCommands.lineHistory": {
          "type": "string",
          "default": "git log -L ${startLine},${endLine}:${path}",
          "description": "Git command to use for line history command"
        },
        "git-terminal-integration.gitCommands.showCommit": {
          "type": "string",
          "default": "git show ${commit}",
          "description": "Git command to use for showing a commit"
        },
        "git-terminal-integration.gitCommands.showFileDiffAtCommit": {
          "type": "string",
          "default": "git show --format=\"\" ${commit} -- ${path}",
          "description": "Git command to use for showing a file's diff at a commit"
        },
        "git-terminal-integration.gitCommands.showFileContentsAtCommit": {
          "type": "string",
          "default": "git show ${commit}:${path}",
          "description": "Git command to use for showing a file's contents at a commit"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
