{
  "name": "gitterm",
  "displayName": "GitTerm",
  "description": "Integrations for using Git in the terminal",
  "publisher": "jaminthorns",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaminthorns/vscode-gitterm.git"
  },
  "author": {
    "name": "Jamin Thornsberry"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitterm.fileHistory",
        "title": "GitTerm: File History"
      },
      {
        "command": "gitterm.lineHistory",
        "title": "GitTerm: Line History"
      },
      {
        "command": "gitterm.fileBlame",
        "title": "GitTerm: File Blame"
      }
    ],
    "keybindings": [
      {
        "command": "gitterm.fileHistory",
        "key": "alt+h",
        "when": "editorFocus"
      },
      {
        "command": "gitterm.lineHistory",
        "key": "alt+l",
        "when": "editorTextFocus"
      },
      {
        "command": "gitterm.fileBlame",
        "key": "alt+b",
        "when": "editorFocus"
      }
    ],
    "configuration": {
      "title": "GitTerm",
      "properties": {
        "gitterm.gitCommands.fileHistory": {
          "type": "string",
          "default": "git log --oneline --graph --date-order -- '${path}'",
          "description": "Git command to use for file history command"
        },
        "gitterm.gitCommands.lineHistory": {
          "type": "string",
          "default": "git log -L ${startLine},${endLine}:'${path}'",
          "description": "Git command to use for line history command"
        },
        "gitterm.gitCommands.fileBlame": {
          "type": "string",
          "default": "git blame '${path}'",
          "description": "Git command to use for file blame command"
        },
        "gitterm.gitCommands.showCommit": {
          "type": "string",
          "default": "git show ${commit}",
          "description": "Git command to use for showing a commit"
        },
        "gitterm.gitCommands.showFileDiffAtCommit": {
          "type": "string",
          "default": "git show ${commit} -- '${path}'",
          "description": "Git command to use for showing a file's diff at a commit"
        },
        "gitterm.gitCommands.showFileContentsAtCommit": {
          "type": "string",
          "default": "git show ${commit}:'${path}'",
          "description": "Git command to use for showing a file's contents at a commit"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "format": "prettier . --write",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "prettier": "^3.0.1",
    "typescript": "^5.1.3"
  }
}
